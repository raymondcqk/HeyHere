<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/btn_add_publish_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/lv_item_bg_selector"
            android:text="点击发布"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/ib_publish_write_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/add_131px"/>
    </LinearLayout>

    <EditText
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/edt_project"
        style="@style/edt_get_info"
        android:hint="请输入项目招募标题"
        android:lines="1"/>

    <View
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/gray"></View>

    <EditText
        android:id="@+id/edt_orgnization"
        style="@style/edt_get_info"
        android:hint="发布组织名称"
        android:lines="1"
        android:textSize="10sp"/>

    <EditText
        android:id="@+id/edt_publisher"
        style="@style/edt_get_info"
        android:hint="发布人姓名"
        android:lines="1"
        android:textSize="10sp"/>

    <EditText
        android:id="@+id/edt_pubdate"
        style="@style/edt_get_info"
        android:hint="发布时间，如 2016/08/31"
        android:lines="1"
        android:textSize="10sp"/>

    <EditText
        android:id="@+id/edt_deadline"
        style="@style/edt_get_info"
        android:hint="截止时间，如 2016/09/30"
        android:lines="1"
        android:textSize="10sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="15dp"
        android:background="@color/gray"></View>

    <EditText
        android:id="@+id/edt_brief"
        style="@style/edt_get_info"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:height="0dp"
        android:gravity="start"
        android:hint="项目招募介绍信息"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/picture_123px"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/google_voice_search_128px"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/website_141px"/>

    </LinearLayout>


</LinearLayout>