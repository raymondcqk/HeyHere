<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/net"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/oneself"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cloud_computing_128px"/>

    <View
        android:id="@+id/v_center"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true">

    </View>

    <ImageView
        android:id="@+id/link"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/oneself"
        android:layout_toLeftOf="@+id/v_center"
        android:src="@drawable/link_128px"/>

    <ImageView
        android:id="@+id/oneself"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/v_center"
        android:layout_toRightOf="@+id/v_center"
        android:src="@drawable/oneself_128px"/>

    <TextView
        android:id="@+id/tv_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guidie_01_text"
        android:layout_centerHorizontal="true"
        android:text="在这里"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/guidie_01_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_guide_sign"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我们崇尚精神连接\n打破地理距离的高墙\n大学，不再孤独\n让我们精英聚合，做自己爱做的事情"
        android:textColor="@color/black"/>


    <LinearLayout
        android:id="@+id/btn_guide_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_guide_try"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/lv_item_bg_selector"
            android:text="路过"/>

        <Button
            android:id="@+id/btn_guide_sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/lv_item_bg_selector"
            android:text="Sign In/Sign up"/>
    </LinearLayout>
</RelativeLayout>