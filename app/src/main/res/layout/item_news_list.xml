<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_news_list_tiem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/img_news_list_img"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="3"
            android:text="标题标题比蒂萨大所大所大所付撒的哇大的风发多是倒萨大的大的啊大大图表题大的看家到卡上家到卡上京东圣诞快乐肌氨酸到敬爱是辽阔的集散地撒旦就撒可点击sakdlskdjasadsadjkdsajldkjsad"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/img_news_list_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/logging" />

        <TextView
            android:layout_marginBottom="3dp"
            android:id="@+id/tv_news_list_tiem_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_news_list_tiem_pubdate"
            android:text="来源：新浪"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_news_list_tiem_pubdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_news_list_img"
            android:text="2016年12月1日"
            android:textSize="8sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>